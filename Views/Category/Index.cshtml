@using CafeMenuProject.Models
@model IEnumerable<Category>

<h2>Kategoriler</h2>

<p>
    <a asp-action="Create">Yeni Kategori Ekle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.CategoryName)</th>
            <th>@Html.DisplayNameFor(model => model.ParentCategory)</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.CategoryName)</td>
                <td>@Html.DisplayFor(modelItem => item.ParentCategory.CategoryName)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CategoryId">Düzenle</a> |
                    <a asp-action="Details" asp-route-id="@item.CategoryId">Detaylar</a> |
                    <a asp-action="Delete" asp-route-id="@item.CategoryId">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
